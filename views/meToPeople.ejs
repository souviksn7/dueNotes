              </table>
              <button class="add_due" id="add_due">Add Due</button>
              <button class="add_payment" id="add_payment">Add Payment</button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <br />
      <br />
    </div>

