        <tbody id="total_peoples">
          <% user.forEach((item)=>{%>
          <tr>
            <td>
              <table>

                <p id="id_name_2"><%= item.id %></p>

                <div class="name" id="name">
                  <p>Name: <span><%= item.id %></span></p>
                  <button class="remove_people">Remove people</button>
                </div>
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Due</th>
                    <th>Paid</th>
                    <th>Total</th>
                    <th>Reason</th>
                  </tr>
                </thead>
                <tbody id="due_items">
                  <!-- <tr>
                    <td>24th August</td>
