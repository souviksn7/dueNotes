  <body>
    <form action="add_due_to_people" method="post" class="popup_form" id ="popup_form_to_me_due">

      <textarea name="id_due_toPeople" id="id_due_toPeople" class="id_toBoth" cols="30" rows="10">hola</textarea>

      <h3>Date</h3>
      <input type="text" name="date" placeholder="Enter Date">
      <h3>Due amount</h3>
      <input type="number" name="due_amount" placeholder="Enter due amount">
      <h3>Reason</h3>
      <input type="text" name="reason" placeholder="Enter Reason">
      <button type="submit" id="ok_due">OK</button>
      <button id="cancel_due">Cancel</button>
    </form>

    <form action="add_payment_to_people" method="post" class="popup_form" id ="popup_form_to_me_paid">

      <textarea name="id_paid_toPeople" id="id_paid_toPeople" class="id_toBoth" cols="30" rows="10">hola22</textarea>

      <h3>Date</h3>
      <input type="text" name="date" placeholder="Enter Date">
      <h3>Paid amount</h3>
      <input type="number" name="paid_amount" placeholder="Enter paid amount">
      <h3>Reason</h3>
      <input type="text" name="reason" placeholder="Enter Reason">
      <button type="submit" id="ok_due">OK</button>
      <button id="cancel_due">Cancel</button>
    </form>

    <div class="switch">
      <!-- <button id="peopleToMe"> People's Dues to me</button>
      <button id="meToPeople">My Dues</button> -->
      <button id="peopleToMe"><a href="/">People's Dues to me</a></button>
      <button id="meToPeople"><a href="/meToPeople">My Dues</a></button>
    </div>

    <div class="subject">
      <h1>My Dues</h1>
      <button class="add_people" id="add_people">Add People</button>
      <div class="form-popup" id="myForm">
        <form action="/nameToPeople" method="post" class="form-container">
          <label for="name"><b>Name</b></label>
          <input type="text" placeholder="Enter Name" name="name" required />
          <button type="submit" class="btn" id="add_people_ok">Ok</button>
          <button type="button" class="cancel_people">Close</button>
        </form>
      </div>
      <!-- <button class="open-button" onclick="openForm()">Open Form</button> -->
    </div>

    <div class="container" id="container">
      <table>
        <!-- <thead>
